{
  "compilerOptions": {
    "module": "commonjs",
    "strict": false,
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true
  },
  "include":[
    "src/**/*",
    "src/**/*.json",
  ]
}